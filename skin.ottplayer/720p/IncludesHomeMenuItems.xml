			<include>ButtonHomeSubCommonValues</include>
			<label>[COLOR orange]Configuraciones[/COLOR]</label>
			<onclick>PlayMedia(&quot;plugin://plugin.video.ottplayer/?url=AS&amp;mode=10&amp;name=%5BB%5D%5BCOLOR+white%5DConfiguraciones%5B%2FCOLOR%5D%5B%2FB%5D&amp;iconimage=%2Fstorage%2F.kodi%2Faddons%2Fplugin.video.ottplayer%2Ficon.png&amp;description=&quot;)</onclick>
		</control>
	</include>
	
